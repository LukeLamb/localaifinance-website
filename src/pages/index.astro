---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Home"
  description="Professional AI Financial Assistant - Secure, private financial analysis and trading insights powered by local AI technology. Experience the future of financial analysis with our advanced AI assistant."
>
  <Navigation slot="navigation" />

  <!-- Hero Section -->
  <section
    id="hero"
    class="section bg-gradient-to-br from-blue-50 via-white to-emerald-50"
  >
    <div class="container-custom">
      <div class="text-center">
        <h1 class="text-hero font-bold gradient-text mb-6 animate-fade-in">
          Professional AI Financial Assistant
        </h1>
        <p
          class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto animate-slide-up"
        >
          Secure, private financial analysis and trading insights powered by <strong
            >local AI technology</strong
          >. Experience the future of financial analysis.
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up"
        >
          <a
            href="#features"
            class="btn btn-primary text-lg px-8 py-4 shadow-xl hover:shadow-2xl"
          >
            Explore Features
          </a>
          <a href="/blog" class="btn btn-outline text-lg px-8 py-4">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="section-compact bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-section-title font-bold text-gray-900 mb-4">
          Powerful Features
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Advanced AI capabilities designed for professional financial analysis
          and trading.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="feature-card text-center">
          <div
            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            AI-Powered Analysis
          </h3>
          <p class="text-gray-600">
            Advanced machine learning algorithms analyze market trends,
            financial data, and trading patterns with unprecedented accuracy.
          </p>
        </div>

        <div class="feature-card text-center">
          <div
            class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-secondary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Complete Privacy
          </h3>
          <p class="text-gray-600">
            Your financial data stays completely private. Local processing means
            your sensitive information never leaves your device.
          </p>
        </div>

        <div class="feature-card text-center">
          <div
            class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-accent-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Lightning Fast
          </h3>
          <p class="text-gray-600">
            Real-time analysis and insights delivered in milliseconds. Make
            informed decisions faster than ever before.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-section-title font-bold text-gray-900 mb-4">
          How It Works
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Simple, powerful, and completely private. Get started in minutes.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div
            class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            1
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Install & Setup
          </h3>
          <p class="text-gray-600">
            Download and install LocalAI Finance on your device. Quick setup
            process takes less than 5 minutes.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-12 h-12 bg-secondary-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            2
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Connect Your Data
          </h3>
          <p class="text-gray-600">
            Securely connect your trading accounts and financial data sources.
            All data processing happens locally.
          </p>
        </div>

        <div class="text-center">
          <div
            class="w-12 h-12 bg-accent-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold"
          >
            3
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Get Insights</h3>
          <p class="text-gray-600">
            Receive intelligent analysis, trading recommendations, and market
            insights powered by advanced AI.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="cta" class="section bg-gradient-primary">
    <div class="container-custom text-center">
      <h2 class="text-section-title font-bold text-white mb-4">
        Ready to Transform Your Trading?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Join thousands of traders who have already upgraded their financial
        analysis with LocalAI Finance.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#contact"
          class="btn bg-white text-primary-600 hover:bg-gray-50 text-lg px-8 py-4 shadow-xl"
        >
          Get Started Today
        </a>
        <a
          href="/blog"
          class="btn border-2 border-white text-white hover:bg-white hover:text-primary-600 text-lg px-8 py-4"
        >
          Read Success Stories
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-section-title font-bold text-gray-900 mb-4">
          Get in Touch
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Have questions about our local AI financial solutions? We're here to
          help you secure your financial privacy.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="flex items-start space-x-4">
            <div
              class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Us</h3>
              <p class="text-gray-600 mb-2">
                Get in touch via email for general inquiries
              </p>
              <a
                href="mailto:info@localaifinance.com"
                class="text-primary-600 hover:text-primary-700 font-medium"
              >
                info@localaifinance.com
              </a>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div
              class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-secondary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.196l2.196 2.196M6.196 6.196L4 4m14.196 2.196L20 4M6.196 17.804L4 20m14.196-2.196L20 20M12 21.804l-2.196-2.196M17.804 17.804l2.196 2.196M6.196 6.196L4 4"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Technical Support
              </h3>
              <p class="text-gray-600 mb-2">
                Need help? We provide expert technical assistance
              </p>
              <a
                href="mailto:support@localaifinance.com"
                class="text-primary-600 hover:text-primary-700 font-medium"
              >
                support@localaifinance.com
              </a>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div
              class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-accent-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Response Time
              </h3>
              <p class="text-gray-600 mb-2">
                We typically respond within 24 hours
              </p>
              <span class="text-primary-600 font-medium"
                >Fast & Reliable Support</span
              >
            </div>
          </div>

          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <div class="flex items-start">
              <svg
                class="w-6 h-6 text-blue-600 mt-0.5 mr-3 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
              <div>
                <h4 class="font-medium text-blue-900 mb-2">
                  Privacy Guaranteed
                </h4>
                <p class="text-blue-800 text-sm">
                  All communications are encrypted and handled with the same
                  privacy standards as our financial solutions. Your information
                  is never shared with third parties.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Contact Form -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Quick Contact</h3>
          <form
            name="quick-contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-4"
          >
            <input type="hidden" name="form-name" value="quick-contact" />

            <!-- Honeypot field -->
            <div style="display: none;">
              <label
                >Don't fill this out if you're human: <input
                  name="bot-field"
                /></label
              >
            </div>

            <div>
              <label
                for="quick-name"
                class="block text-sm font-medium text-gray-700 mb-1">Name</label
              >
              <input
                type="text"
                id="quick-name"
                name="name"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                placeholder="Your name"
              />
            </div>

            <div>
              <label
                for="quick-email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Email</label
              >
              <input
                type="email"
                id="quick-email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label
                for="quick-message"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="quick-message"
                name="message"
                required
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 resize-vertical"
                placeholder="How can we help you?"></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transform transition-all duration-200 hover:scale-105"
            >
              Send Message
            </button>
          </form>

          <div class="text-center mt-6">
            <a
              href="/contact"
              class="text-primary-600 hover:text-primary-700 text-sm font-medium"
            >
              Need more options? Visit our full contact page →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer slot="footer" />
</Layout>
